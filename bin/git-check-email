#!/usr/bin/env bash

if ! git config user.email >/dev/null; then
    cat <<EOF >&2
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
    WARNING: git user.email config variable is not set!
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

You should type something like:

  git config user.email x@x.x

EOF
    exit 1
fi

exit 0
